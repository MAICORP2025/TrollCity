-- Add notification settings columns to user_profiles
-- Run this migration to enable user notification preferences

ALTER TABLE user_profiles ADD COLUMN IF NOT EXISTS enable_push_notifications BOOLEAN DEFAULT TRUE;
ALTER TABLE user_profiles ADD COLUMN IF NOT EXISTS enable_email_notifications BOOLEAN DEFAULT TRUE;
ALTER TABLE user_profiles ADD COLUMN IF NOT EXISTS enable_in_app_notifications BOOLEAN DEFAULT TRUE;
ALTER TABLE user_profiles ADD COLUMN IF NOT EXISTS notification_settings_updated_at TIMESTAMP WITH TIME ZONE;

-- Update existing users to have notifications enabled by default
UPDATE user_profiles 
SET enable_push_notifications = TRUE, 
    enable_email_notifications = TRUE, 
    enable_in_app_notifications = TRUE,
    notification_settings_updated_at = NOW()
WHERE enable_push_notifications IS NULL;

-- Create web_push_subscriptions table if it doesn't exist
CREATE TABLE IF NOT EXISTS web_push_subscriptions (
  id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
  user_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
  endpoint TEXT NOT NULL,
  keys JSONB NOT NULL,
  expiration_time TIMESTAMP WITH TIME ZONE,
  created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
  updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
  is_active BOOLEAN DEFAULT TRUE,
  UNIQUE(endpoint)
);

-- Enable RLS on web_push_subscriptions
ALTER TABLE web_push_subscriptions ENABLE ROW LEVEL SECURITY;

-- Users can manage their own subscriptions
CREATE POLICY "users_manage_own_subscriptions" ON web_push_subscriptions
  FOR ALL USING (auth.uid() = user_id);

-- Index for faster lookups
CREATE INDEX IF NOT EXISTS idx_web_push_subscriptions_user_id ON web_push_subscriptions(user_id);
CREATE INDEX IF NOT EXISTS idx_web_push_subscriptions_active ON web_push_subscriptions(user_id, is_active) WHERE is_active = TRUE;

-- Function to update subscription status
CREATE OR REPLACE FUNCTION toggle_push_subscription(p_user_id UUID, p_is_active BOOLEAN)
RETURNS void AS $$
BEGIN
  UPDATE web_push_subscriptions
  SET is_active = p_is_active, updated_at = NOW()
  WHERE user_id = p_user_id;
END;
$$ LANGUAGE plpgsql SECURITY DEFINER;

-- Grant execute permission
GRANT EXECUTE ON FUNCTION toggle_push_subscription(UUID, BOOLEAN) TO authenticated;

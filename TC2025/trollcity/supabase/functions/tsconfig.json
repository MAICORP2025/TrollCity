{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./"],
    "types": ["node"],
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "generateWeeklyFamilyPayout",
    "generateagoratoken",
    "notifyPolice",
    "openaiResponse",
    "processSquarePayment",
    "processSquarePayout",
    "processSquareRefund",
    "processUserPaymentMethod",
    "randomCoinGiveaway"
  ]
}